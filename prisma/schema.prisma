generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  image         String?   
  password      String?
  followers     UserRelations[] @relation("Followers")
  followersCount Int @default(0)
  following     UserRelations[] @relation("Following")
  followingCount Int @default(0)
  blogs         Blog[] @relation("blog-user")
  liked         Like[] @relation("like-user")
  comments         Comment[]    @relation("comment-user")
  @@map("users")
}

model UserRelations {
  id    String @id @default(cuid())
  follower User   @relation("Following", fields: [followerId], references: [id])
  followerId String
  following User   @relation("Followers", fields: [followingId], references: [id])
  followingId String
  @@unique([followerId, followingId])
}


model Blog {
  id            String      @id @default(cuid())
  title         String
  content       String
  isPublic      Boolean
  thumbnail     String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  authorId      String
  author        User      @relation("blog-user",fields: [authorId], references: [id])
  likes         Like[]    @relation("like-blog")
  likeCount     Int @default(0)
  comments         Comment[]    @relation("comment-blog")
  commentCount     Int @default(0)
  tags    Tag[] @relation("tag-blog")
}

model Like{
  id  String @id @default(cuid())
  blogId String
  blog Blog @relation("like-blog", fields: [blogId], references: [id])
  userId String
  user User @relation("like-user", fields: [userId], references: [id])
  @@unique([blogId, userId])
}

model Comment{
  id  String @id @default(cuid())
  blogId String
  blog Blog @relation("comment-blog", fields: [blogId], references: [id])
  userId String
  user User @relation("comment-user", fields: [userId], references: [id])
  content   String
  createdAt DateTime
  likeCount     Int   @default(0)
  @@unique([blogId, userId])
}

model Tag{
  id String @id @default(cuid())
  label String @unique
  blogs Blog[] @relation("tag-blog")
}

